<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Send Message</h5>             
            </div>
            <div class="modal-body">
                <form asp-action="Enviar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="AssuntoId" class="control-label"></label>
                        <select asp-for="AssuntoId" asp-items="Model.ListaContato" class="form-control" required>
                             <option value="">Selecione um assunto</option> 
                        </select>
                        <span asp-validation-for="AssuntoId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label" required></label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" required oninput="bloquearNumeros(this)" maxlength="65" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Digite seu e-mail" required maxlength="70" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" placeholder="(00) 123456789" required maxlength="14" title="Por favor, insira exatamente 11 números." oninput="formatarTelefone(this)" pattern="\([0-9]{2}\) [0-9]{9}" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Mensagem" class="control-label"></label>
                        <textarea asp-for="Mensagem" class="form-control" placeholder="Mande sua mensagem" rows="4" style="resize: none;" maxlength=" 300" required></textarea>
                        <span asp-validation-for="Mensagem" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <input type="submit" value="Enviar" class="btn btn-primary" />
                    </div>                
                </form>
            </div>
        </div>
    </div>
